<view class="zan-tab">
  <block wx:if="{{ tab.scroll || scroll }}">
    <scroll-view
      class="zan-tab__bd zan-tab__bd--scroll {{ tab.fixed || fixed ? 'zan-tab__bd--fixed' : '' }}"
      scroll-x="true"
      style="height: {{ (tab.height || height) ? (tab.height || height) + 'px' : 'auto' }}"
    >
      <template
        is="zan-tab-list"
        data="{{ list: tab.list || list, currentTab, componentId }}"
      />
    </scroll-view>
  </block>
  <block wx:else>
    <view class="zan-tab__bd {{ tab.fixed || fixed ? 'zan-tab__bd--fixed' : '' }}">
      <template
        is="zan-tab-list"
        data="{{ list: tab.list || list, currentTab, componentId }}"
      />
    </view>
  </block>
</view>
<!-- 插入内容 -->
<slot></slot>

<template name="zan-tab-list">
  <view
    wx:for="{{ list }}"
    wx:key="id"
    class="zan-tab__item {{ currentTab == item.id ? 'zan-tab__item--selected' : '' }}"
    data-component-id="{{ componentId }}"
    data-item-id="{{ item.id }}"
    bindtap="_handleZanTabChange"
  >
    <view class="zan-tab__title">{{ item.title }}</view>
  </view>
</template>
